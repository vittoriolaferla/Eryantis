<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.view.gui.controllers.GuiLoadGameController">
    <children>
        <AnchorPane fx:id="scenePane" nodeOrientation="LEFT_TO_RIGHT" prefHeight="720.0" prefWidth="1280.0">
            <children>
                <ImageView fitHeight="720.0" fitWidth="1280.0" opacity="0.4">
                    <image>
                        <Image url="@../Graphical_Assets/Eriantys_slider.jpg" />
                    </image>
                </ImageView>
                <Button fx:id="loadButton" layoutX="525.0" layoutY="302.0" mnemonicParsing="false" onMouseClicked="#onLoadClick" prefHeight="55.0" prefWidth="250.0" text="LOAD">
                    <font>
                        <Font name="Book Antiqua Bold Italic" size="24.0" />
                    </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                </Button>
                <Button fx:id="newButton" layoutX="525.0" layoutY="382.0" mnemonicParsing="false" onMouseClicked="#onNewClick" prefHeight="55.0" prefWidth="250.0" text="NEW GAME">
                    <font>
                        <Font name="Book Antiqua Bold Italic" size="24.0" />
                    </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                </Button>
                <Label layoutX="402.0" layoutY="241.0" text="Previous game found, do you want to load it?">
                    <font>
                        <Font name="Book Antiqua Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
